<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:text="Categories"
                android:textColor="@color/black_transparent"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:scrollbars="none"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_tshirt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_fashion"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_jersey"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_jersey"
                        app:layout_constraintStart_toEndOf="@+id/home_category_tshirt"
                        app:layout_constraintTop_toTopOf="@+id/home_category_tshirt" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_shirt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_shirt"
                        app:layout_constraintStart_toEndOf="@+id/home_category_jersey"
                        app:layout_constraintTop_toTopOf="@+id/home_category_jersey" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_sweaters"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_sweater"
                        app:layout_constraintStart_toEndOf="@+id/home_category_shirt"
                        app:layout_constraintTop_toTopOf="@+id/home_category_shirt" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_pants"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_jeans"
                        app:layout_constraintStart_toEndOf="@+id/home_category_sweaters"
                        app:layout_constraintTop_toTopOf="@+id/home_category_sweaters" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_coats"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_clothes"
                        app:layout_constraintStart_toEndOf="@+id/home_category_pants"
                        app:layout_constraintTop_toTopOf="@+id/home_category_pants" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_cap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_cap"
                        app:layout_constraintStart_toEndOf="@+id/home_category_coats"
                        app:layout_constraintTop_toTopOf="@+id/home_category_coats" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_category_undershirt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/gradient"
                        android:padding="6dp"
                        android:src="@drawable/ic_undershirt"
                        app:layout_constraintStart_toEndOf="@+id/home_category_cap"
                        app:layout_constraintTop_toTopOf="@+id/home_category_cap" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="T-Shirt"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_tshirt"
                        app:layout_constraintStart_toStartOf="@+id/home_category_tshirt"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_tshirt" />

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Jersey"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_jersey"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="@+id/home_category_jersey"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_jersey" />

                    <TextView
                        android:id="@+id/textView102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Shirt"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_shirt"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="@+id/home_category_shirt"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_shirt" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Sweaters"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_sweaters"
                        app:layout_constraintStart_toStartOf="@+id/home_category_sweaters"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_sweaters" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Pants"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_pants"
                        app:layout_constraintStart_toStartOf="@+id/home_category_pants"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_pants" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Coats"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_coats"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="@+id/home_category_coats"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_coats" />

                    <TextView
                        android:id="@+id/textView103"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Cap"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_cap"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="@+id/home_category_cap"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_cap" />

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Undershirt"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/home_category_undershirt"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="@+id/home_category_undershirt"
                        app:layout_constraintTop_toBottomOf="@+id/home_category_undershirt" />

                </android.support.constraint.ConstraintLayout>

            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:text="Promo"
                android:textColor="@color/black_transparent"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recyclerview_product_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:listitem="@layout/item_product_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">


            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>